{
  "$schema": "https://raw.githubusercontent.com/nicoverbruggen/tauri-updater-schema/refs/heads/main/schema.json",
  "productName": "REDE",
  "version": "1.0.0",
  "identifier": "com.rede.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "REDE",
        "width": 400,
        "height": 600,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "visible": false
      }
    ],
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "tooltip": "REDE - Voice Dictation"
    },
    "security": {
      "csp": "default-src 'self'; connect-src 'self' https://api.openai.com https://api.anthropic.com https://*.supabase.co https://github.com https://api.github.com; style-src 'self' 'unsafe-inline'"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "entitlements": "./entitlements.plist",
      "minimumSystemVersion": "12.0",
      "frameworks": [],
      "signingIdentity": null
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/knu77on/rede/releases/latest/download/latest.json"
      ],
      "pubkey": ""
    }
  }
}
